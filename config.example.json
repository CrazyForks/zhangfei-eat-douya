    "user_uploaded",
    "comfyui",
    "gemini_image",
    "pexels",
    "unsplash",
    "pixabay",
    "local"
  ],
  "local_image_directories": [
    {
      "path": "pic",
      "tags": [
        "default",
        "general"
      ]
    },
    {
      "path": "images/nature",
      "tags": [
        "nature",
        "landscape"
      ]
    },
    {
      "path": "images/tech",
      "tags": [
        "technology",
        "business"
      ]
    }
  ],
  "enable_user_upload": true,
  "uploaded_images_dir": "uploads",
